 <% layout("/layouts/boilerplate") %>
 
 <body>
    <div class="main" style="margin-top: 3rem;">
        <%= success%>
        <%= error%>
        <h3>All Listings</h3>
    <p>Welcome to AirBnb! Here are the listings available:</p>
