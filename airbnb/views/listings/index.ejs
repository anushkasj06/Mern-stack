            <a href="/listings/<%= listing.id %>"  style="text-decoration: none; color: black; ">
                <div class="card col listing-card" >
    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img"  style="height: 20rem;" >
    <div class="card-img-overlay"><%=listing.title%></div>
    <div class="card-body">
        <p class="card-text"><b><%= listing.title %></b>
            <br>
            <i><%= listing.location %>  &nbsp; <%= listing.country %></i>
        </p>
        <p class="card-text">&#8377; <%= listing.price %> /night</p>
    </div>
    </div>
            </a>
    <% }%>
    </div>
    </div>
