<% layout("/layouts/boilerplate") %>
<body>

    <!-- Hero Section -->
    <header class="hero-section mt-3">
        <div class="container">
            <h1>Find your next stay</h1>
            <p>Discover amazing places and unique experiences.</p>
            <form class="search-form d-flex justify-content-center">
                <input class="form-control me-2" type="search" placeholder="Where are you going?" aria-label="Location">
                <input class="form-control me-2" type="date" placeholder="Check-in" aria-label="Check-in">
                <input class="form-control me-2" type="date" placeholder="Check-out" aria-label="Check-out">
                <input class="form-control me-2" type="number" placeholder="Guests" aria-label="Guests" min="1">
                <button class="btn btn-danger" type="submit">Search</button>
            </form>
        </div>
    </header>

    <!-- Main Content - Listings (Placeholder) -->
    <main class="container mt-5">
        <h2 class="mb-4">Explore Nearby</h2>
        <!-- This is where you would loop through your listings and display them as cards -->
        <!-- Example of how a listing card might look (you'll generate these dynamically later) -->
        <div class="row">
            <!-- Placeholder for 3 listing cards -->
            <div class="col-md-4">
                <div class="card listing-card">
                    <img src="https://images.unsplash.com/photo-1568605114967-8130f3a36994?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxMjA3fDB8MXxzZWFyY2h8NHx8aG91c2V8ZW58MHx8fHwxNjE2MTYyMzgx&ixlib=rb-1.2.1&q=80&w=400" class="card-img-top" alt="Listing Image">
                    <div class="card-body">
                        <h5 class="card-title">Cozy Beach House</h5>
                        <p class="card-text">Beautiful views, right on the beach. Perfect for a weekend getaway.</p>
                        <p class="card-text"><small class="text-muted">$150 / night</small></p>
                        <a href="#" class="btn btn-primary add-btn">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card listing-card">
                    <img src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxMjA3fDB8MXxzZWFyY2h8Mnx8bHV4dXJ5JTIwaG91c2V8ZW58MHx8fHwxNjE2MTYyNDI3&ixlib=rb-1.2.1&q=80&w=400" class="card-img-top" alt="Listing Image">
                    <div class="card-body">
                        <h5 class="card-title">Modern City Apartment</h5>
                        <p class="card-text">Stay in the heart of the city with all amenities included.</p>
                        <p class="card-text"><small class="text-muted">$200 / night</small></p>
                        <a href="#" class="btn btn-primary add-btn">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card listing-card">
                    <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxMjA3fDB8MXxzZWFyY2h8N3x8Y291bnRyeSUyMGhvdXNlfGVufDB8fHx8MTYxNjE2MjQ2Mw&ixlib=rb-1.2.1&q=80&w=400" class="card-img-top" alt="Listing Image">
                    <div class="card-body">
                        <h5 class="card-title">Rustic Country Cabin</h5>
                        <p class="card-text">Escape to nature in this charming cabin. Pet-friendly!</p>
                        <p class="card-text"><small class="text-muted">$120 / night</small></p>
                        <a href="#" class="btn btn-primary add-btn">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome for icons (optional) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>